{
  "name": "github-actions-search",
  "version": "0.0.3",
  "type": "module",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build",
    "typecheck": "tsc -p ./tsconfig.app.json --noEmit",
    "lint": "pnpm /^lint:.*/",
    "lint:prettier": "pnpm run:prettier . --check",
    "lint:eslint": "pnpm run:eslint .",
    "lint:cspell": "cspell lint './**/*.{tsx,ts,mts,mcs,mjs,cjs,js,json,md,yml,yaml}' --gitignore --cache",
    "fix": "pnpm /^fix:.*/",
    "fix:prettier": "pnpm run:prettier . --write",
    "fix:eslint": "pnpm run:eslint . --fix",
    "run:prettier": "prettier --ignore-unknown --no-error-on-unmatched-pattern --cache",
    "run:eslint": "eslint --cache --no-error-on-unmatched-pattern --flag unstable_ts_config",
    "test": "vitest --run",
    "test:watch": "vitest",
    "vrt": "playwright test",
    "vrt:update": "pnpm vrt --update-snapshots",
    "setup:check-manager": "npx -y only-allow pnpm",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "jotai": "^2.11.0",
    "lucide-react": "^0.469.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "valibot": "1.0.0-beta.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@tsconfig/node22": "^22.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.10.2",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/utils": "^8.18.2",
    "@vitejs/plugin-react": "^4.2.1",
    "commitizen": "^4.3.1",
    "cspell": "^8.17.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jiti": "^2.4.2",
    "jsdom": "^25.0.1",
    "lefthook": "^1.10.1",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "release-it": "^17.11.0",
    "release-it-pnpm": "^4.6.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^5.0.0",
    "vite-plugin-web-extension": "^4.0.0",
    "vitest": "^2.1.8",
    "webextension-polyfill": "^0.10.0"
  },
  "packageManager": "pnpm@9.15.1+sha512.1acb565e6193efbebda772702950469150cf12bcc764262e7587e71d19dc98a423dff9536e57ea44c49bdf790ff694e83c27be5faa23d67e0c033b583be4bfcf"
}
